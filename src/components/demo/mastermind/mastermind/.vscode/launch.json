    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "port": 5500,
            "request": "attach",
            "name": "Attach",
            "url": "http://localhost:5500/index.html",
            "webRoot":"${workspaceFolder}"
        },
        {
            "type": "firefox",
            "request": "launch",
            "port": 3000,
            "reAttach": true,
            "name": "Launch index.html",
            "url": "https://localhost:3000/index.html",
            "webRoot":"${workspaceFolder}"
        },
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "url": "http://localhost:5500/index.html",
            "webRoot": "${workspaceFolder}/mastermind"
        },


        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:5500/index.html",
            "webRoot": "${workspaceFolder}"
        },
    ]
}